page {
    background-color: white;
}

.contentTop {
    display: flex;
    justify-content: space-between;
}

.content {
    width: 622rpx;
    margin-top: 72rpx;
    margin-bottom: 91rpx;
}

.container {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

.cmbar {
    padding-top: 4px;
    position: fixed;
    bottom: 0;
    width: 750rpx;
    height: 120rpx;
    background-color: white;
}

.cmlistTop {
    border: 1px solid #2d4068;
}

.commentlist {
    width: 670rpx;
    background-color: rgb(235, 235, 235);
    border-radius: 10rpx;
    margin-bottom: 50rpx;
    margin-top: 10rpx;
}

.comment {
    border: 1px solid white;
}

.commentContent {
    display: flex;
    font-family: Source Han Sans CN;
    font-size: 30rpx;
    color: #535353;
    width: 626rpx;
    margin: 0 auto;
    padding: 22rpx 0;
}

.nickname {
    font-weight: bold;
    margin-right: 8rpx;
}

.sendComment {
    border-top: 1px solid #fcc200;
    position: fixed;
    bottom: 0;
    background-color: #ffeedf;
    width: 750rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.sCinput {
    font-family: Source Han Sans CN;
    font-size: 30rpx;
    line-height: 51rpx;
    color: #272727;
    width: 600rpx;
    height: 64rpx;
    background-color: white;
    border-radius: 32rpx;
    padding: 0 30rpx;
}

.sCbtn {
    margin-left: 6rpx;
    font-family: Source Han Sans CN;
    width: 118rpx;
    height: 64rpx;
    background-color: #2d4068;
    border-radius: 32rpx;
    color: #fefefe;
    font-size: 30rpx;
    margin: 0;
    line-height: 64rpx;
}

.dsd {
    font-size: 22rpx;
    color: #535353;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0;
    margin: 0;
    margin-left: 10rpx;
}
